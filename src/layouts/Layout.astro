---
interface Props {
  title: string;
  middle: string;
}

const { title, middle } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="/htmx.js" defer></script>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="logo">
          <img
            src="/android-chrome-512x512.png"
            alt="Logo de la plateforme"
            srcset=""
          />
        </div>
        <p>
          {middle}
        </p>
        <nav>
          <ul>
            <li>
              <a class={currentPath === "/" ? "active" : ""} href="/">Acceuil</a
              >
            </li>
            <li>
              <a
                class={currentPath === "/peoples" ? "active" : ""}
                href="/peoples">Les acrédités</a
              >
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --gray-200: #e5e7eb;
    --gray-300: #d1d5db;
    --gray-400: #9ca3af;
    --gray-500: #6b7280;
    --gray-600: #4b5563;
    --gray-700: #374151;
    --gray-800: #1f2937;
    --gray-900: #111827;
    --gray-950: #030712;
    --red-600: #dc2626;
    --orange-600: #ea580c;
    --green-600: #22c55e;
  }

  html {
    font-family: system-ui, sans-serif;
    background: var(--gray-600);
  }

  body {
    margin: 0;
    padding: 0;
  }

  a {
    color: var(--gray-200);
    text-decoration: none;
  }

  svg {
    fill: var(--gray-200);
  }

  .logo {
    height: 40px;
    cursor: pointer;
  }

  .logo img {
    height: 100%;
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1100px;
    width: 95%;
    margin: 0 auto;
  }

  header {
    background-color: var(--gray-800);
    color: var(--gray-300);
  }

  p {
    font-size: 1.5rem;
  }

  ul {
    display: flex;
    gap: 1rem;
  }

  li {
    list-style-type: none;

    cursor: pointer;
  }

  li a:not(.active):hover {
    text-decoration: underline;
  }

  li a.active {
    background-color: var(--gray-600);
    padding: 0.5rem;
    border-radius: 10px;
  }

  li a.active:hover {
    background-color: var(--gray-900);
  }
</style>
